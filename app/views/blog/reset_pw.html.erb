<section class="background-radial-gradient overflow-hidden">

    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
      <div class="row gx-lg-5 align-items-center mb-5">
        <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
          <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
            "Don't Panic" <br/>
            <span style="color: hsl(218, 81%, 75%)">It's easy to reset your password with Scribe</span>
          </h1>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
          <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
          <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

          <div class="rounded bg-glass">
            <div class="card-body px-4 py-5 px-md-5">

              <form action="/reset_pw" method="post" id="signup-form">
                <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example4">New Password</label>
                  <input type="password" id="new-pw" class="form-control" name="new_pw" pattern="/^[a-zA-Z0-9!@#\$%\^\&*_=+-]{8,12}$/g" required/>
                  <label class="form-label" for="form3Example4">Confirm password</label>
                  <input type="password" id="confirm-pw" class="form-control" pattern="/^[a-zA-Z0-9!@#\$%\^\&*_=+-]{8,12}$/g" required/>
                </div>

                <div class="float-left">
                  <input type="checkbox" class="form-check-input me-2" name="show-password" id="show-password">&nbsp;
                  <label for="show-password" class="form-check-label">Show password</label>
                </div> <br>
                <p class="text-secondary"><em class="fa-solid fa-circle-info"></em> Try storing your password in a password wallet</p>
                <!-- Submit button -->
                <div id="warn-div"></div>
                <button type="submit" id="sub-btn" hidden></button>
                <button type="button" id="submit-btn" class="btn btn-primary btn-block mb-4">
                  Submit
                </button>
                <a href="/"><button type="button" class="btn btn-secondary btn-block mb-4">Cancel</button></a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<%= javascript_pack_tag 'reg.js' %>
