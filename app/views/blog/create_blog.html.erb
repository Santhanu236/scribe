<section class="create-a-blog">
    <h1 class="title">Create New Blog</h1>
    <form class="contact-form row" enctype="multipart/form-data"  action="/create_new_blog"  method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input name="blog[users_id]" type="hidden" value="<%= user['id'] %>">
       <div class="form-field col-lg-6">
          <input class="input-text js-input" type="text" name="blog[title]" required>
          <label class="label" for="name">Title</label>
       </div>
       <div class="form-field col-lg-6 ">
          <input class="input-text js-input" type="text" name="blog[category]" required>
          <label class="label">Category</label>
       </div>
       <div class="form-field col-lg-12 ">
          <input id="company" class="input-text js-input" type="text" name="blog[description]" required>
          <label class="label" for="company">Description</label>
       </div>

       <div class="form-field col-lg-12">
        <textarea name="blog[text]" id="blog-text" cols="105 " rows="10" placeholder="Write blog here..."></textarea>
       </div>
       <div class="form-field col-lg-12">
        <h3>Upload Images Here</h3>
        <input type="file" name="blog[img_url]" id="img-inp">
       </div>
       <div class="form-field col-lg-12">
          <button class="submit-btn" type="submit">Submit</button>
          <a href="/home"><button class="submit-btn" type="button">Cancel</button></a>
       </div>
    </form>
 </section>

